<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="standard_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_right</item>
        <item name="android:layout_marginTop">@dimen/margin_top_bottom</item>
        <item name="android:layout_marginRight">@dimen/margin_left_right</item>
        <item name="android:layout_marginBottom">@dimen/margin_top_bottom</item>
    </style>

    <style name="root_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="gravity_text_style" parent="standard_button_style">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="result_text_style" parent="gravity_text_style">
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textSize">@dimen/result_text_view</item>
    </style>

    <style name="input_size_style" parent="result_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/initial_value_text_size</item>
    </style>

</resources>